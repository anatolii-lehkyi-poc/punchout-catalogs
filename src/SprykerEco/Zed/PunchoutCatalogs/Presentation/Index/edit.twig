{% endblock %}

{% block content %}
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                {{ include ('@PunchoutCatalogs/_partial/connection-form.twig', {'submitLabel':'Save'}) }}
