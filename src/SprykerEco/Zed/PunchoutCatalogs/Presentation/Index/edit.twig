{% extends '@Gui/Layout/layout.twig' %}

{% block section_title 'Edit transferred cart connection' | trans %}

{% block action %}
    {{ backActionButton('/punchout-catalogs', 'List of PunchOut connections' | trans) }}
{% endblock %}

{% block content %}
    {{ form_start(punchoutCatalogConnectionForm) }}
         {{ form_rest(punchoutCatalogConnectionForm) }}
         <input type="submit" class="btn btn-create safe-submit" value="{{ 'Save' | trans }}" />
    {{ form_end(punchoutCatalogConnectionForm) }}
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script type="text/javascript" src="/assets/js/spryker-zed-punchout-catalogs-main.js"></script>
{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/spryker-zed-punchout-catalogs-main.css">
{% endblock %}
